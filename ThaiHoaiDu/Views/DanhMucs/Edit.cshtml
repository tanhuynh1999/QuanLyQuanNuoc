@model ThaiHoaiDu.Models.DanhMuc

@{
    ThaiHoaiDu.Models.NguoiDung nd = (ThaiHoaiDu.Models.NguoiDung)Session["TaiKhoan"];
    if (nd != null && nd.VaiTro == false)
    {
        Response.Redirect("/QuanLy/Index");
    }
    ViewBag.Title = "Edit";
    Layout = "~/Views/Layout/QuanLy.cshtml";
}
<div class="inner-block">
    <div class="product-block">
        <div class="pro-head" style="width: 100%; height: 500px">
            <center style="font-weight: bold"><h3><a href="/DanhMucs"><i class="fas fa-chevron-circle-left"></i>&nbsp;</a>Cập nhật tài khoản nhân viên</h3><a href=""></a></center>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.MaDanhMuc)

                    <div class="form-group alert alert-danger">
                        <b class="control-label col-md-2"><i class="fas fa-align-justify">&nbsp;</i>Tên danh mục</b>
                        <div class="col-md-10">
                            <input type="text" name="TenDanhMuc" value="@Model.TenDanhMuc" class="form-control" required />
                        </div>
                    </div>

                    <center>
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-10">
                                <input type="submit" value="Lưu" class="btn btn-danger" style="width: 30%; height: 50px"/>
                            </div>
                        </div>
                    </center>
                </div>
            }
        </div>
    </div>
</div>   