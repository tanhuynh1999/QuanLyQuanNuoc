@using ThaiHoaiDu.Models;
@model List<CTHD>
@{
    ViewBag.Title = "NhatKyNgay";
    Layout = "~/Views/Layout/QuanLy.cshtml";
}

<div class="inner-block">
    <div class="inbox">
        <div class="col-md-4 compose">
            <div class="mail-profile">
                <div class="mail-pic">
                    <a href="#"><img src="images/b3.png" alt=""></a>
                </div>
                <div class="mailer-name">
                    <h5><a href="#">Nhật ký @if (ViewBag.ID == null) { ViewBag.ID = "ngày"; } @ViewBag.ID</a></h5>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="compose-block">
                <a href="#">Doanh thu: @{ float temp = (float)Model.Sum(t => t.HoaDon.TongTien).Value;}@temp.ToString("0.") vnđ</a>
            </div>
            <div class="compose-bottom">
                <nav class="nav-sidebar">
                    <ul class="nav tabs">
                        <li class="active"><a href="#tab1" data-toggle="tab"><i class="fa fa-dollar">&nbsp;</i>Số hóa đơn<span> @{ float demhd = (float)Model.Count;}@demhd</span><div class="clearfix"></div></a></li>
                        <li class="active"><a href="#tab1" data-toggle="tab"><i class="fa fa-dollar">&nbsp;</i>Số sản phẩm bán<span> @{ float demsosp = (float)Model.Sum(t => t.SoLuong);}@demsosp  </span><div class="clearfix"></div></a></li>
                        <li class="active"><a href="#tab1" data-toggle="tab"><i class="fa fa-dollar">&nbsp;</i>Số khách<span>0</span><div class="clearfix"></div></a></li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-md-8 mailbox-content  tab-content tab-content-in">
            <div class="tab-pane active text-style" id="tab1">
                <div class="mailbox-border">
                    <div class="mail-toolbar clearfix">
                        <div class="float-left">
                            <div class="btn btn_1 btn-default mrg5R">
                                <i class="fa fa-refresh"> </i>
                            </div>
                            <div class="dropdown dropdown-inbox">
                                <a href="#" title="" class="btn btn-default" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-cog icon_8"></i>
                                    <i class="fa fa-chevron-down icon_8"></i>
                                    <div class="ripple-wrapper"></div>
                                </a>
                                <ul class="dropdown-menu float-right">
                                    <li>
                                        <a href="@Url.Action("Index", "NhatKi", new { id = 0})" title="">
                                            <i class="fa fa-pencil-square-o icon_9"> </i>
                                            Thống kê theo ngày
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "NhatKi", new { id = 1})" title="">
                                            <i class="fa fa-calendar icon_9"> </i>
                                            Thống kê theo tuần
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", "NhatKi", new { id = 2})" title="">
                                            <i class="fa fa-download icon_9"> </i>
                                            Thống kê theo tháng
                                        </a>
                                    </li>
                                    <li class="divider"></li>
                                    <li>
                                        <a href="@Url.Action("Index", "NhatKi", new { id = 3})" class="font-red" title="">
                                            <i class="fa fa-times" icon_9=""> </i>
                                            Tất cả
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                        <div class="float-right">
                            <span class="text-muted m-r-sm">Showing 20 of 346 </span>
                            <div class="btn-group m-r-sm mail-hidden-options" style="display: inline-block;">
                                <div class="btn-group">
                                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-folder"></i> <span class="caret"></span></a>
                                    <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                        <li><a href="#">Social</a></li>
                                        <li><a href="#">Forums</a></li>
                                        <li><a href="#">Updates</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Spam</a></li>
                                        <li><a href="#">Trash</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">New</a></li>
                                    </ul>
                                </div>
                                <div class="btn-group">
                                    <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-tags"></i> <span class="caret"></span></a>
                                    <ul class="dropdown-menu dropdown-menu-right" role="menu">
                                        <li><a href="#">Work</a></li>
                                        <li><a href="#">Family</a></li>
                                        <li><a href="#">Social</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Primary</a></li>
                                        <li><a href="#">Promotions</a></li>
                                        <li><a href="#">Forums</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="btn-group">
                                <a class="btn btn-default"><i class="fa fa-angle-left"></i></a>
                                <a class="btn btn-default"><i class="fa fa-angle-right"></i></a>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                    <table class="table tab-border">
                        <tbody>
                            <tr class="unread checked">
                                <td class="hidden-xs">
                                    Mã hóa đơn
                                </td>
                                <td class="hidden-xs">
                                    Số bàn
                                </td>
                                <td class="hidden-xs">
                                    Tên sản phẩm
                                </td>
                                <td>
                                    Số lượng
                                </td>
                                <td>
                                    Đơn giá
                                </td>
                                <td>
                                    Thành tiền
                                </td>
                                <td>
                                    Giờ ra
                                </td>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="unread checked">
                                    <td class="hidden-xs">
                                        @item.MaHD
                                    </td>
                                    <td class="hidden-xs">
                                        @item.HoaDon.Ban.SoBan
                                    </td>
                                    <td class="hidden-xs">
                                        @item.Spham.TenSanPham
                                    </td>
                                    <td>
                                        @item.SoLuong
                                    </td>
                                    <td>
                                        @item.Spham.Gia
                                    </td>
                                    <td>
                                        @item.ThanhTien
                                    </td>
                                    <td>
                                        @item.HoaDon.GioRa.Value.ToShortDateString()
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>



