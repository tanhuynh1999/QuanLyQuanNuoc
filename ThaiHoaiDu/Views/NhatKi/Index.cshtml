                            </div>
                            <div class="clearfix"> </div>
                        </div>*@
                    </div>
                    <table class="table tab-border">
                        <tbody>
                            <tr class="unread checked">
                                <td class="hidden-xs">
                                    Mã hóa đơn
                                </td>
                                <td class="hidden-xs">
                                    Số bàn
                                </td>
                                <td class="hidden-xs">
                                    Tên sản phẩm
                                </td>
                                <td>
                                    Số lượng
                                </td>
                                <td>
                                    Đơn giá
                                </td>
                                <td>
                                    Thành tiền
                                </td>
                                <td>
                                    Giờ ra
                                </td>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="unread checked">
                                    <td class="hidden-xs">
                                        @item.MaHD
                                    </td>
                                    <td class="hidden-xs">
                                        @item.HoaDon.Ban.SoBan
                                    </td>
                                    <td class="hidden-xs">
                                        @item.Spham.TenSanPham
                                    </td>
                                    <td>
                                        @item.SoLuong
                                    </td>
                                    <td>
                                        @{ float gia = (float)item.Spham.Gia;} @gia.ToString("#,##0")
                                    </td>
                                    <td>
                                        @{ float thanhtien = (float)item.ThanhTien;} @thanhtien.ToString("#,##0")
                                    </td>
                                    <td>
                                        @item.HoaDon.GioRa.Value.ToShortDateString()
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <center>
                        <div>
                            @{
                                int idnk = new int();
                                if (Session["idnk"] == null)
                                {
                                    idnk = 0;
                                }
                                else
                                {
                                    idnk = int.Parse(Session["idnk"].ToString());
                                }
                            }
                            @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page, id = idnk }))
                        </div>
                    </center>
                </div>
            </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>



