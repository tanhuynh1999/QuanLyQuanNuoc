@using ThaiHoaiDu.Models;
@model List<DanhMuc>
<form action="@Url.Action("Index", "SanPham")">
    <select name="id" class="btn btn-default">
        <option value="0">Tât cả</option>
        @foreach (var item in Model)
        {
            <option value="@item.MaDanhMuc"> @item.TenDanhMuc</option>
        }
    </select>
    <input type="submit" value="Lọc" class="btn btn-default" />
</form>
